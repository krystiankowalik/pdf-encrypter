<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControlPaneController">

    <HBox alignment="CENTER">
        <children>
            <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" text="Source Pass:" textAlignment="CENTER" />
            <TextField fx:id="sourcePasswordField" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="93.0" HBox.hgrow="NEVER">
                <HBox.margin>
                    <Insets left="7.0" />
                </HBox.margin>
            </TextField>
            <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" text="Target Pass:" textAlignment="CENTER">
                <HBox.margin>
                    <Insets left="12.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="targetPasswordField" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="93.0">
                <HBox.margin>
                    <Insets left="7.0" />
                </HBox.margin>
            </TextField>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <children>
                    <Button id="clear_button" fx:id="clearButton" maxHeight="1.7976931348623157E308" mnemonicParsing="false" text="Clear">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </Button>
                    <Button id="encrypt_button" fx:id="encryptButton" maxHeight="1.7976931348623157E308" mnemonicParsing="false" text="Encrypt" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </Button>
                    <Button id="decrypt_button" fx:id="decryptButton" maxHeight="1.7976931348623157E308" mnemonicParsing="false" text="Decrypt" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </HBox.margin></Button>
                </children>
            </HBox>
        </children>
    </HBox>
    <HBox id="application_status_indicator" alignment="TOP_RIGHT">
        <children>
            <Label id="application_status_indicator_text" fx:id="applicationStatusIndicatorText" alignment="TOP_RIGHT" text="Idle" VBox.vgrow="NEVER" />
        </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </HBox>
</VBox>
